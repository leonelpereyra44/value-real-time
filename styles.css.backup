/* Estilos para el Monitor S&P 500 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 10px;
    margin: 0;
}

/* Estilos específicos para móviles */
@media (max-width: 768px) {
    body {
        padding: 5px;
        justify-content: flex-start;
        padding-top: 20px;
    }
}

.container {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    text-align: center;
    max-width: 600px;
    width: 100%;
    box-sizing: border-box;
}

@media (max-width: 768px) {
    .container {
        padding: 20px 15px;
        border-radius: 15px;
        margin: 0;
        max-width: 100%;
    }
}

h1 {
    color: #333;
    margin-bottom: 30px;
    font-size: 2.5rem;
    font-weight: 300;
}

@media (max-width: 768px) {
    h1 {
        font-size: 1.8rem;
        margin-bottom: 20px;
    }
}

.price-display {
    background: linear-gradient(45deg, #2196F3, #21CBF3);
    color: white;
    padding: 30px;
    border-radius: 15px;
    margin: 20px 0;
    box-shadow: 0 10px 20px rgba(33, 150, 243, 0.3);
}

.price {
    font-size: 4rem;
    font-weight: bold;
    margin-bottom: 10px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.change {
    font-size: 1.5rem;
    font-weight: 500;
}

@media (max-width: 768px) {
    .price-display {
        padding: 25px 15px;
        margin: 15px 0;
    }
    
    .price {
        font-size: 2.8rem;
        margin-bottom: 8px;
    }
    
    .change {
        font-size: 1.2rem;
    }
}

.positive {
    color: #4CAF50;
}

.negative {
    color: #f44336;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin: 30px 0;
}

.info-item {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    border-left: 4px solid #2196F3;
}

.info-label {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 5px;
}

.info-value {
    color: #333;
    font-size: 1.2rem;
    font-weight: bold;
}

@media (max-width: 768px) {
    .info-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin: 20px 0;
    }
    
    .info-item {
        padding: 15px 12px;
    }
    
    .info-label {
        font-size: 0.8rem;
    }
    
    .info-value {
        font-size: 1.1rem;
    }
}

.last-update {
    color: #888;
    font-size: 0.9rem;
    margin-top: 20px;
}

.loading {
    color: #666;
    font-style: italic;
}

.error {
    color: #f44336;
    background: #ffebee;
    padding: 15px;
    border-radius: 5px;
    margin: 10px 0;
}

@media (max-width: 768px) {
    .last-update {
        font-size: 0.8rem;
        margin-top: 15px;
    }
    
    .error {
        padding: 12px;
        border-radius: 8px;
        margin: 8px 0;
        font-size: 0.85rem;
        line-height: 1.4;
    }
}

/* Estilos para pantallas muy pequeñas */
@media (max-width: 480px) {
    body {
        padding: 3px;
    }
    
    .container {
        padding: 15px 10px;
    }
    
    h1 {
        font-size: 1.5rem;
        margin-bottom: 15px;
    }
    
    .price {
        font-size: 2.2rem !important;
    }
    
    .change {
        font-size: 1rem !important;
    }
    
    .info-grid {
        gap: 10px;
    }
    
    .info-item {
        padding: 12px 8px;
    }
    
    .chart-container {
        padding: 12px;
    }
    
    .chart-btn {
        padding: 8px 12px;
        font-size: 0.8rem;
        min-width: 60px;
    }
    
    #priceChart {
        max-height: 250px;
    }
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
}

.updating {
    animation: pulse 1s infinite;
}

/* Estilos para el gráfico */
.chart-container {
    margin: 30px 0;
    background: #f8f9fa;
    border-radius: 15px;
    padding: 25px;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
    gap: 10px;
}

.chart-container h2 {
    color: #333;
    font-size: 1.5rem;
    margin: 0;
}

@media (max-width: 768px) {
    .chart-container {
        margin: 20px 0;
        padding: 15px;
        border-radius: 10px;
    }
    
    .chart-header {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
    }
    
    .chart-container h2 {
        font-size: 1.2rem;
        text-align: center;
    }
}

.data-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #666;
}

.status-indicator {
    font-size: 1.2rem;
}

.status-indicator.real {
    color: #4CAF50;
}

.status-indicator.simulated {
    color: #FF9800;
}

.status-indicator.error {
    color: #f44336;
}

@media (max-width: 768px) {
    .data-status {
        font-size: 0.8rem;
        justify-content: center;
        gap: 6px;
        text-align: center;
    }
    
    .status-indicator {
        font-size: 1rem;
    }
}

.chart-controls {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
}

.chart-btn {
    background: #fff;
    border: 2px solid #2196F3;
    color: #2196F3;
    padding: 8px 16px;
    border-radius: 20px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
}

.chart-btn:hover {
    background: #e3f2fd;
}

.chart-btn.active {
    background: #2196F3;
    color: white;
}

@media (max-width: 768px) {
    .chart-controls {
        gap: 8px;
        margin-bottom: 15px;
    }
    
    .chart-btn {
        padding: 10px 18px;
        font-size: 0.9rem;
        border-radius: 25px;
        min-width: 70px;
    }
}

#priceChart {
    max-height: 400px;
    background: white;
    border-radius: 10px;
}

@media (max-width: 768px) {
    #priceChart {
        max-height: 280px;
        border-radius: 8px;
    }
}